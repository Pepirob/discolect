<header>
  {{>navigation this}}
</header>
<main>
  {{#if foundReviews}}
    <h1>SEARCH REVIEW RESULTS</h1>
  {{else}}
    <h1>NO SEARCH RESULTS</h1>
    <p>Please try again with another search</p>
  {{/if}}

  

  <form action="/review/search" method="get">
    <input type="hidden" name="reviewSearch" value="{{reviewSearch}}">
    <input type="hidden" name="prevPage"/ value="true">
    <input type="hidden" name="page" value="{{updatePage}}" />
    <button>BACK</button>
  </form>


  <form action="/review/search" method="get">
    <input type="hidden" name="reviewSearch" value="{{reviewSearch}}">
    <input type="hidden" name="nextPage" value="true"/>
    <input type="hidden" name="page" value="{{updatePage}}" />
    <button>NEXT</button>
  </form>


