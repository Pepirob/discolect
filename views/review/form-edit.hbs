<h1>EDIT REVIEW</h1>

<section>
  <img src="{{albumBiggestImage}}" alt="Album cover of {{name}}" width="300" />
  <h2>{{name}}</h2>
  <h3>by {{artistNames}}</h3>
  <h4>Label: {{label}}</h4>
  <h4>Released: {{releaseYear}}</h4>
</section>

<section>
  <img src="{{image}}" alt="the profile pic of user" width="200" />

  <form action="/review/{{albumId}}/:reviewID/edit" method="post">
    <label for="rating">RATING: </label>
    <input type="number" name="rating" min="0" max="10" />
    <br />
    <label for="subheading">SUBHEADING: </label>
    <input type="text" name="subheading" maxlength="500" />
    <br />
    <label for="content">YOUR REVIEW: </label>
    <input type="text" name="content" {{!minlength="500"}} maxlength="5500" />
    <br />
    <button>CREATE REVIEW</button>
  </form>
</section>