<header class="header">
  <div class="container">
    <a href="/">HOME</a>
  </div>
</header>

<main>
  <section class="container container-first">
    <h1 class="profile-reviews-heading">Sign in to {{appTitle}}</h1>
    <form action="/auth/signup" method="post">
      <fieldset>
        <legend>Choose a great username and start reviewing all those incredible albums!</legend>
        <div>
          <label for="username">USERNAME: </label>
          <input type="text" name="username" required minlength="5" minlength="15" />
        </div>
        <div>
          <label for="email">EMAIL: </label>
          <input type="email" name="email" required />

        </div>
        <div>
          <label for="password">PASSWORD: </label>
          <input type="password" name="password" required minlength="9" maxlength="15" />
        </div>
        {{#if errorMessage}}
        <p style="color:red;">{{errorMessage}}</p>
        {{/if}}
        <button>SUBMIT</button>
      </fieldset>
    </form>
  </section>

</main>