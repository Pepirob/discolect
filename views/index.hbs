{{>navigationHeader this}}

<main class="home">
  <section class="container home-header">
    <h1 class="home-heading">{{appTitle}} \m/</h1>
    <h2 class="home-subheading">Our latest album reviews are:</h2>
  </section>
  <section class="container">
    <ul class="home-list">
      {{#each latestEntries}}
      <li class="home-list-item">
        <a href="/review/{{this.spotifyId}}/{{this._id}}">
          <img class="home-list-image" src="{{this.albumImg}}" alt="Cover {{this.albumName}}">
          <h3 class="home-list-item-heading">{{this.albumName}}</h3>
          <h4 class="home-list-item-subheading">{{this.artistNames}}</h4>
        </a>
        <a href="/profile/{{this.author._id}}">
          <h5 class="home-list-item-subheading">Reviewed by {{this.author.username}}</h5>
        </a>
        </a>
      </li>
      {{/each}}
    </ul>
  </section>
</main>